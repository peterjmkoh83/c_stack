@model User

<form class="mt-3" asp-action="Register" asp-controller="Home" method="POST">
   <span class="text-danger" asp-validation-for="FirstName"></span>
   <div class="form-group">
      <label asp-for="FirstName">First Name</label>
      <input asp-for="FirstName" type="text" class="form-control" id="FirstName" placeholder="">
   </div>
   <span class="text-danger" asp-validation-for="LastName"></span>
   <div class="form-group">
      <label asp-for="LastName">Last Name</label>
      <input asp-for="LastName" type="text" class="form-control" id="LastName" placeholder="">
   </div>
   <span class="text-danger" asp-validation-for="Username"></span>
   <div class="form-group">
      <label asp-for="Username">Username</label>
      <input asp-for="Username" type="text" class="form-control" id="Username" placeholder="">
   </div>
   <span class="text-danger" asp-validation-for="Password"></span>
   <div class="form-group">
      <label asp-for="Password">Password</label>
      <input asp-for="Password" type="password" class="form-control" id="Password" placeholder="">
   </div>
   <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
   <div class="form-group">
      <label asp-for="ConfirmPassword">Confirm Password</label>
      <input asp-for="ConfirmPassword" type="password" class="form-control" id="ConfirmPassword" placeholder="">
   </div>
   <button type="submit" class="btn btn-info">Sign up Now</button>
</form>