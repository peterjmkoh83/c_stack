@model LoginUser

<form class="mt-3" asp-action="Login"  asp-controller="Home" method="POST">
   <span class="text-danger" asp-validation-for="LoginUsername"></span>
   <div class="form-group">
      <label asp-for="LoginUsername">Username</label>
      <input asp-for="LoginUsername" type="text" class="form-control" id="LoginUsername" placeholder="">
   </div>
   <span class="text-danger" asp-validation-for="LoginPassword"></span>
   <div class="form-group">
      <label asp-for="LoginPassword">Password</label>
      <input asp-for="LoginPassword" type="password" class="form-control" id="LoginPassword" placeholder="">
   </div>
   <button type="submit" class="btn btn-info">Log in</button>
</form>