@{
    ViewData["Title"] = "Add Category";
    int id = @ViewBag.pro.ProductId;
}
@model Association
<h1 class="text-center">@ViewBag.pro.Name</h1>
<div class="row mt-5">
    <div class="col-6">
        <h2>Categories:</h2>
    <ul>
    @{
        foreach(var c in ViewBag.list)
        {
        <li><h3>@c.CName</h3></li>
        }
    }
</ul> 
  </div>
  <div class="col-6">
    <h2>Add Category:</h2>
    <form asp-action="ProductAddCat" asp-controller="Home" asp-route-id="@id" method="POST" >
        <select asp-for="CategoryId" class="form-control">
            @{
                foreach(var cat in ViewBag.cats)
                {
                    <option asp-for="CategoryId" value="@cat.CategoryId">@cat.CName</option>
                }
            }
        </select>
        <button type="submit" class="btn btn-dark btn-lg mt-4">Add</button>
    </form>
    
  </div>
</div>