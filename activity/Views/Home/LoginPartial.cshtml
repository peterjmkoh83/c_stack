@{
    ViewData["Title"] = "Login/Registration";
}

@model LoginUser
<h5>Login</h1>
<form asp-action="Login" asp-controller="Home" method="post">
   <div class="form-group">
      <p><span asp-validation-for="LoginEmail" class="text-danger"></span><p>
      <label for="LoginEmail">Email</label>
      <input type="email" class="form-control col-6" asp-for="LoginEmail">
   </div>
   <div class="form-group">
      <p><span asp-validation-for="LoginPassword" class="text-danger"></span><p>
      <label for="LoginPassword">Password</label>
      <input type="password" class="form-control col-6" asp-for="LoginPassword">
   </div>
   <button type="submit" class="btn btn-info">Login</button>
</form>