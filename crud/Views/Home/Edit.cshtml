@model Dish

<div class="container">
   <a href="/">Home</a>
   <h1 style="text-align:center">Edit @Model.Name</h1>
   <form asp-action="UpdateOneDish" asp-route-id="@Model.DishId" asp-controller="Home" method="post">
      <div class="form-group">
         <span asp-validation-for="Chef" class="text-danger"></span>
         <label asp-for="Chef">Chef's Name</label>
         <input type="text" class="form-control" asp-for="Chef" value="@Model.Chef">
      </div>
      <div class="form-group">
         <span asp-validation-for="Name" class="text-danger"></span>
         <label asp-for="Name">Name of Dish</label>
         <input type="text" class="form-control" asp-for="Name" value="@Model.Name">
      </div>
      <div class="form-group">
         <span asp-validation-for="Calories" class="text-danger"></span>
         <label asp-for="Calories"># of Calories</label>
         <input type="number" class="form-control" asp-for="Calories" value="@Model.Calories">
      </div>
      <div class="form-group">
         <span asp-validation-for="Tastiness" class="text-danger"></span>
         <label asp-for="Tastiness">Tastiness</label>
         <select class="form-control" asp-for="Tastiness" value="@Model.Tastiness">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
         </select>
      </div>
      <div class="form-group">
         <span asp-validation-for="Description" class="text-danger"></span>
         <label asp-for="Description">Description</label>
         <textarea asp-for="Description" class="form-control" cols="30" rows="10">@Model.Description</textarea>
      </div>
      <button type="submit">Edit Dish</button>
   </form>
</div>