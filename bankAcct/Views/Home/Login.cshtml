@model LoginUser

<div class="container">
   <h1>Login</h1>
   <p style="text-align-last:right"><a href="/"><u>Need to Register?</u></a></p>
   <hr>
   
   <form asp-action="Login" asp-controller="Home" method="post">
     
      <div class="form-group">
         <p><span asp-validation-for="LoginEmail" class="text-danger"></span><p>
         <label for="LoginEmail">Email</label>
         <input type="email" class="form-control col-4" asp-for="LoginEmail">
      </div>
      <div class="form-group">
         <p><span asp-validation-for="LoginPassword" class="text-danger"></span><p>
         <label for="LoginPassword">Password</label>
         <input type="password" class="form-control col-4" asp-for="LoginPassword">
      </div>
      
      <button type="submit" class="btn btn-info">Login</button>
   </form>
    
    
        
</div>